# EditorConfig para el proyecto "Nuestro Primer Mes Siendo Novios"
# Desarrollado por Antony Salcedo

# Configuración global
root = true

# Configuración para todos los archivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Configuración para archivos HTML
[*.html]
indent_style = space
indent_size = 4
max_line_length = 120

# Configuración para archivos CSS
[*.css]
indent_style = space
indent_size = 4
max_line_length = 120

# Configuración para archivos JavaScript
[*.js]
indent_style = space
indent_size = 4
max_line_length = 120

# Configuración para archivos JSON
[*.json]
indent_style = space
indent_size = 2
max_line_length = 120

# Configuración para archivos Markdown
[*.md]
indent_style = space
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = false

# Configuración para archivos YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 120

# Configuración para archivos Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# Configuración para archivos de configuración
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 4
max_line_length = 120

# Configuración para archivos de texto plano
[*.txt]
indent_style = space
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = false

# Configuración para archivos de Git
[.gitignore]
indent_style = space
indent_size = 2
max_line_length = 120

[.gitattributes]
indent_style = space
indent_size = 2
max_line_length = 120

[.gitconfig]
indent_style = space
indent_size = 2
max_line_length = 120

# Configuración para archivos de configuración del proyecto
[package.json]
indent_style = space
indent_size = 2
max_line_length = 120

[server.py]
indent_style = space
indent_size = 4
max_line_length = 120

# Configuración para archivos de documentación
[README.md]
indent_style = space
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = false

[LICENSE]
